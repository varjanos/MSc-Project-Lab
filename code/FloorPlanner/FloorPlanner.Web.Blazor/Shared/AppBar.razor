@using FloorPlanner.Web.Blazor.Services.UserProfile
@inject IUserProfileClientService UserService

<div/>

<MudSpacer />
<Microsoft.AspNetCore.Components.Authorization.AuthorizeView>
    <Authorized>
        <MudText Typo="Typo.subtitle1">@_username</MudText>
    </Authorized>
    <NotAuthorized>
        <MudText Typo="Typo.subtitle1">Please login to use the page!</MudText>
    </NotAuthorized>
</Microsoft.AspNetCore.Components.Authorization.AuthorizeView>

@code 
{
    private string _username = string.Empty;

    protected override void OnInitialized()
    {
        _username = UserService.GetUserName();
    }
}